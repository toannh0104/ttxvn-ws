        <dependency>
			<groupId>org.apache.hadoop</groupId>
			<artifactId>hadoop-core</artifactId>
			<version>${apache.hadoop-version}</version>
			<exclusions>
				<exclusion>
	                <groupId>org.mortbay.jetty</groupId>
	                <artifactId>jetty</artifactId>
	            </exclusion>
	            <exclusion>
	                <groupId>org.mortbay.jetty</groupId>
